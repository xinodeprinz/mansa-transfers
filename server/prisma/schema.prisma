generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id         String @id @default(uuid()) @db.Uuid
  first_name String
  last_name  String
  email      String @unique
  phone      String @unique
  password   String

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("users")
}

model Product {
  id          String  @id @default(uuid()) @db.Uuid
  title       String  @unique
  image       String
  description String?
  price       Decimal @db.Decimal(12, 2)
  quantity    Int
  slug        String  @unique

  payments Payment[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@index([slug])
  @@map("products")
}

model Payment {
  id         String @id @default(uuid()) @db.Uuid
  product_id String @db.Uuid
  reference  String
  name       String
  email      String

  product Product @relation(fields: [product_id], references: [id], onDelete: Restrict)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@index([product_id])
  @@index([reference])
  @@map("payments")
}
